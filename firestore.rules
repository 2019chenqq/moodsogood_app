rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // allow authenticated users to read drug_dictionary
    match /drug_dictionary/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // keep everything else unchanged (deny by default)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
